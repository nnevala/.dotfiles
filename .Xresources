xterm*termName:           xterm-256color
xterm*faceName:           Droid Sans Mono
xterm*faceSize:           10
xterm*dynamicColors:      true
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          4096

! Treat URLs as single words (ie. you can double click select full urls)
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Meta + Ctrl + Mouse1 opens selection in Firefox
*VT100*translations: #override Meta Ctrl <Btn1Up>: exec-formatted("firefox '%t'", PRIMARY)

